<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <!-- MenuGridPhoto.xaml -->
  <DataTemplate x:Key="GPTipsTricksView">
    <GridView ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem, Mode=TwoWay}">
      <GridView.ItemsPanel>
        <ItemsPanelTemplate>
          <WrapGrid Orientation="Horizontal"></WrapGrid>
        </ItemsPanelTemplate>
      </GridView.ItemsPanel>
      <GridView.ItemTemplate>
        <DataTemplate>
          <Grid Width="160" Height="180">
            <Grid.Background>
              <SolidColorBrush Color="Black" Opacity="0.6"></SolidColorBrush>
            </Grid.Background>
            <Grid.RowDefinitions>
              <RowDefinition Height="100" />
              <RowDefinition Height="40" />
              <RowDefinition Height="40" />
            </Grid.RowDefinitions>
            <Image Source="{Binding Icon}" Width="100" Height="100" Stretch="UniformToFill"/>
            <TextBlock Foreground="{StaticResource AppForegroundColor}" FontSize="16" Grid.Row="1" Margin="0,10,0,0" HorizontalAlignment="Center" TextWrapping="Wrap" Text="{Binding Title}"/>
            <TextBlock Foreground="{StaticResource AppForegroundColor}" FontSize="16" Grid.Row="2" Margin="0,10,0,0" Text=""/>
          </Grid>
        </DataTemplate>
      </GridView.ItemTemplate>
    </GridView>
  </DataTemplate>

</ResourceDictionary>
